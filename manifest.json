{
  "manifest_version": 2,
  "name": "OpenPureTab",
  "description": "An open source Chrome-based extension that allows customization of the new-tab page.",
  "version": "1.3",
  "author" : "griimnak",


  "background": {
    "persistent": false,
    "scripts": ["js/daemon.js"]
  },

  "chrome_url_overrides" : { "newtab": "new-tab.html" },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },

  "permissions": [
    "tabs",
    "<all_urls>",
    "storage",
    "topSites"
  ]
}
